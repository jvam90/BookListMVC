<div class="container p-0 m-0">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Book List</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-info form-control text-white" asp-controller="Books" asp-action="Upsert">Create New Book</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12 border p-3">
            <table id="dtload" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Author</th>
                        <th>ISBN</th>
                        <th></th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/booklist.js"></script>
}

